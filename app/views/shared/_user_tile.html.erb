<li class="user-tile" data-meta='["<%= user.login %>"]'>
  <div class="user-avatar">
    <img src="<%= user.rels[:avatar].href %>" />
    <% if current_user.nickname != user.login %>
    <div class="user-add-remove-controls">
      <i class="fa fa-plus-square user-add-button button" data-username='<%= user.login %>'></i>
      <i class="fa fa-minus-square user-remove-button button" data-username='<%= user.login %>'></i>
    </div>
    <% end %>
  </div>
  <span class="user-login">
    <a href="<%= user.rels[:html].href %>" target="_blank">
      <%= user.login %>
    </a>
  </span>
</li>
